@import 'nib'

body
  background: linear-gradient(top, #222, #232323)
  background-attachment fixed
  font-family 'Helvetica Neue', Arial, sans-serif
  color #ccc

.blocker
  position fixed
  top 50%
  left 50%

header
  //text-align center
  
.masthead
  color #000
  font-size 300%
  line-height 100%
  text-shadow 0 1px 0 rgba(255, 255, 255, .1), 0 0 30px rgba(255, 255, 255, .125)
  margin .5em 0 1em 0
  letter-spacing -3px

.now-playing
  background rgba(0,0,0,.8)
  color #f5f5f5
  font-size 130%
  line-height 130%
  position fixed
  bottom 0
  right 2%
  padding 1em 1em .5em 1em
  width auto

  .controls
    margin-left 2em

.main
  #search
    #query
      background #191919
      border 1px solid rgba(50,50,50,.3)
      box-shadow 1px 1px 1px rgba(255,255,255,.125)
      font-size 200%
      height 150%
      line-height 150%

    #find-music
      font-size 160%
      height 150%
      line-height 180%
      margin-left .3em

  .results li
    background #111
    font-size 160%
    line-height 150%
    margin-bottom .5em
    text-overflow ellipsis
    overflow hidden
    white-space nowrap
    padding .5em

    a, a:visited
      color #8CC84B

  .more
    background #111
    font-size 160%
    line-height 150%
    padding .5em
    text-align center

    a, a:visited
      color #8CC84B