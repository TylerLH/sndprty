@import 'nib'
@import 'iconic_fill/iconic_fill.css'
@import 'metal.css'
@import 'track_controls'

body, html
  height 100%

body
  background: linear-gradient(top, #222, #232323)
  background-attachment fixed
  font-family 'Helvetica Neue', Arial, sans-serif
  color #ccc

.blocker
  position fixed
  top 50%
  left 50%

header
  //text-align center
  
.masthead
  color #000
  font-size 260%
  line-height 100%
  text-shadow 0 1px 0 rgba(255, 255, 255, .1), 0 0 30px rgba(255, 255, 255, .2)
  margin .5em 0 1em 0
  letter-spacing -3px
  text-align center

.now-playing
  background rgba(0,0,0,.8)
  color #f5f5f5
  font-size 130%
  line-height 130%
  position fixed
  bottom 0
  left 0
  padding 1em 2em 1em 1em
  margin 0 auto
  height 50px
  width 100%

  .track-info
    padding-top 20px

  .controls
    position absolute
    bottom 10px
    right 70px

.sidebar
  background #191919
  background-image url('/images/noise_drk.png')
  box-sizing border-box
  height 100%
  border-right 1px solid #161616
  position fixed
  box-shadow inset 0 1px 9px #000

  .login-buttons
    text-align center
    margin-bottom 2em

  h3, h4, h5
    color #ccc

  h4
    background linear-gradient(top, #222, #111)
    border-top 1px solid rgba(0,0,0,.2)
    border-bottom 1px solid rgba(0,0,0,.6)
    padding .5em
    text-shadow 0 1px 0 rgba(0, 0, 0, .3), 0 0 30px rgba(255, 255, 255, .2)

  ul
    margin .5em 0 1em 0

  ul li
    padding .4em .7em
    text-shadow 1px 1px 1px #000
    cursor pointer

    &:hover
      background #030303

.content
  margin-left 200px !important
  padding-left .5em
  padding-bottom .5em
  position relative

.main
  #search
    margin-top 1em
    #query
      background #191919
      border 1px solid rgba(50,50,50,.3)
      box-shadow 1px 1px 1px rgba(255,255,255,.125)
      font-size 200%
      height 150%
      line-height 150%

    #find-music
      font-size 160%
      height 150%
      line-height 180%
      margin-left .3em

  .results li
    background #111
    font-size 160%
    line-height 150%
    margin-bottom .5em
    text-overflow ellipsis
    overflow hidden
    white-space nowrap
    padding .5em

    a, a:visited
      color #8CC84B

  .more
    background #111
    font-size 160%
    line-height 150%
    padding .5em
    text-align center

    a, a:visited
      color #8CC84B